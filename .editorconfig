# .editorconfig
root = true

# Common settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Indentation defaults
indent_style = space
indent_size = 2

# Python (FastAPI backend)
[*.py]
indent_size = 4
max_line_length = 88
insert_final_newline = true

# JavaScript / TypeScript / Vue (frontend)
[*.{js,jsx,ts,tsx,vue,html}]
indent_size = 4
quote_type = single
trim_trailing_whitespace = true

# JSON
[*.json]
indent_size = 2

[*.{yml,yaml}]
indent_size = 4

# Markdown
[*.md]
trim_trailing_whitespace = false
